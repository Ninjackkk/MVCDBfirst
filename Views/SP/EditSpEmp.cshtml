@using MVCDBFirst.Models
@model Emp

<style>
    table {
        width: 100%;
        border-collapse: collapse; /* Makes borders collapse into a single border */
    }

    th, td {
        border: 1px solid black; /* Adds a border to table headers and cells */
        padding: 8px; /* Adds some padding inside the cells */
        text-align: left; /* Aligns text to the left */
    }

    th {
        background-color: #f2f2f2; /* Adds a background color to the table headers */
    }

    thead {
        background-color: #f9f9f9; /* Optional: Adds a background color to the table header row */
    }
</style>
<form method="post">
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
       
            <tr>
             <td><input type="number" asp-for="Id"/></td>
            <td><input type="text" asp-for="Name" /></td>
            <td><input type="text" asp-for="Email" /></td>
            <td><input type="number" asp-for="Salary" /></td>
                <td>
                <input type="submit" asp-action="EditSpEmp" asp-route-id="@Model.Id">Update<input />
                </td>
         
          </tr>
 
    </tbody>
</table>
</form>